<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA5A5"
    android:backgroundTint="#FF9898"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue sur Trivial Pursuit!" />

    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La prochaine question" />

    <Button
        android:id="@+id/buttonAide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="chercher"
        android:text="Chercher de l'aide"
        android:backgroundTint="#FFEB3B"
        />


</LinearLayout>